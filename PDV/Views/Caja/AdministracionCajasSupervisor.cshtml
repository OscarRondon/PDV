@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#cajasVigentes">Cajas Vigente &nbsp;<span class="glyphicon glyphicon-th-list"></span></a></li>
    <li><a data-toggle="tab" href="#cajasReasignar">Reasignar Cajas &nbsp;<span class="glyphicon glyphicon-th"></span></a></li>
    <li><a data-toggle="tab" href="#cajasHistoria">Cajas Asignadas Historico &nbsp;<span class="glyphicon glyphicon-search"></span></a></li>
</ul>

<div class="tab-content table-bordered">
    <div id="cajasVigentes" class="tab-pane fade in active table-bordered" style="padding: 10px 10px 10px 10px">
        <table id="listadoCajas" class="table table-striped table-hover table-condensed compact" style="width: 100%">
            <thead>
                <tr class="bg-info">
                    <th style="width: 20%">Caja</th>
                    <th>Funcionalidad</th>
                    <th>Función</th>
                    <th>Sección</th>
                    <th>Piso</th>
                    <th>Usuario</th>
                    <th>Fecha Asignación</th>
                    <th>Fecha Inicio</th>
                    <th style="width: 1%">Acciones</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div id="cajasReasignar" class="tab-pane fade table-bordered" style="padding: 10px 10px 10px 10px">
        @Html.Partial("~/Views/Shared/Caja/_PartialCajasAsignadasSupervisorDia.cshtml")
    </div>
    <div id="cajasHistoria" class="tab-pane fade table-bordered" style="padding: 10px 10px 10px 10px">
        @Html.Partial("~/Views/Shared/Caja/_PartialCajasAsignadasSupervisor.cshtml")
    </div>
</div>

@Html.Partial("~/Views/Shared/Caja/_PartialAsignarCajaCajero.cshtml")


