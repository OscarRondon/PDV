@model EntidadesPDV.AnticiposGarantias.AnticiposGarantiasDV
<br /><br />
<div class="panel panel-default">
    <div class="panel-heading">
        <h1 class="panel-title"><strong>Búsqueda Garantía</strong></h1>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col col-md-3">
                <label>Busqueda por Rut:</label>
                <input type="text" id="txtrut" class="form-control input-sm" placeholder="Ingrese RUT Responsable" maxlength="12" />
            </div>
            <div class="col-md-3">
                <label>Busqueda por Fecha:</label>
                <div class="form-group">
                    <div class='input-group date'>
                        <input type='text' class="form-control input-sm" data-format="dd-MM-yyyy" id="txtFechaIngreso" placeholder="Ingrese Fecha Búsqueda"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-3">

            </div>
            <div class="col-md-3">
                <br />
                <button type="button" class="btn btn-primary btn-sm" id="btnBuscarGarantia">Buscar</button>
            </div>
        </div>

        <div class="row" id="divDt" style="display:none">
            <table id="tblAntGar" class="cell-border display compact" cellspacing="0">
                <thead class="thead-inverse">
                    <tr class="bg-info">
                        <th>Fecha<br />Ingreso</th>
                        <th>Tipo<br />Respaldo</th>
                        <th>Monto</th>
                        <th>Banco</th>
                        <th>Numero<br />Cheque</th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
</div>
<br />

@section Scripts {
    <script type="text/javascript" src="~/Scripts/HMS/AnticipoGarantia/Devolucion.js"></script>
}