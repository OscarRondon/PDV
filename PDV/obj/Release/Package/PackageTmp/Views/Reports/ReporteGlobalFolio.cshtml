
@{
    ViewBag.Title = "Global de folios";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string fechaInicio = DateTime.Now.ToString("dd/MM/yyyy");
    string fechaFin = DateTime.Now.ToString("dd/MM/yyyy");
}
<input type="hidden" id="hdnFolioDesde" value="0">
<input type="hidden" id="hdnFolioHasta" value="0">
<div class="panel panel-primary">
    <div class="panel-heading" style="font-weight:bold; cursor: pointer" data-toggle="collapse" href="#panelFiltro">
        <table style="width:100%">
            <tr>
                <td> Generar reporte global de folios:</td>
                <td style="text-align: right"><span id="iconoFiltro" class="glyphicon glyphicon-menu-up"></span></td>
            </tr>
        </table>
    </div>
    <div id="panelFiltro" class="panel-collapse collapse in">
        <div class="panel-body">
            <div class="row" style="padding-right: 10px">
                <div class="col-sm-6">
                    <label class="control-label">Folio :</label>
                    <div class="input-group">
                        <span class="input-group-addon">desde</span>
                        <input type="text" class="form-control text-right" style="max-width:none" id="txtFolioGloblalDesde" placeholder="Folio inicial" onkeyup="PDV.SoloNumero(this)" maxlength="15" />
                        <span class="input-group-addon">hasta</span>
                        <input type="text" class="form-control text-right" style="max-width:none" id="txtFolioGloblalHasta" placeholder="Folio final" onkeyup="PDV.SoloNumero(this)" maxlength="15" />
                    </div>
                </div>

            </div>
        </div>
        <div class="panel-footer text-right">
            <button type="button" class="btn btn-primary btn-sm" title="Buscar" onclick="GlobalFolio.ImprimirReporte()"><span class="glyphicon glyphicon-print"></span>&nbsp;Imprimir</button>
            <button type="button" class="btn btn-primary btn-sm" title="Buscar" onclick="GlobalFolio.BuscarListaFolio()"><span class="glyphicon glyphicon-search"></span>&nbsp;Buscar</button>
        </div>
    </div>
</div>
<div class="panel panel-primary">
    <div class="panel-heading" style="font-weight:bold">Resultados:</div>
    <div class="panel-body">
        <table id="listaFolios" class="table table-striped table-hover table-condensed compact" style="width: 100%">
            <thead>
                <tr class="bg-info">
                    <th>Folio</th>
                    <th>Estado</th>
                    <th>Fecha</th>
                    <th>Ficha</th>
                    <th>Episodio</th>
                    <th>Titular</th>
                    <th>Usuario</th>
                    <th>Monto</th>
                    <th>Caja Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>
</div>
<script type="text/javascript" src="~/Scripts/HMS/Reportes/ReporteGlobalFolio.js"></script>

<script>
    $(document).ready(function () {
        $('#panelFiltro').on('hide.bs.collapse', function (e) {
            $("#iconoFiltro").removeClass("glyphicon-menu-up");
            $("#iconoFiltro").addClass("glyphicon-menu-down");
        });
        $('#panelFiltro').on('show.bs.collapse', function (e) {
            $("#iconoFiltro").removeClass("glyphicon-menu-down");
            $("#iconoFiltro").addClass("glyphicon-menu-up");
        });
    });
</script>
