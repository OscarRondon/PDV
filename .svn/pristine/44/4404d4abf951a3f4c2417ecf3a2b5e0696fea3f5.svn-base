
@{
    ViewBag.Title = "RecaudacionCuenta";
}

<h3>Recaudacion de la Cuenta</h3>

<div class="container">
    <div class="col-md-6">
        <h6>Ejecutivo:  </h6>
        <input type="text" id="txtejecutivo" data-bind="Value:ejecutivo" class="form-control" disabled="disabled" placeholder="Juan Perez Tramolla" />
    </div>
    <div class=" col-md-4">
        <h6>Fecha inicio Pago</h6>
        <input type="text" id="txtfecha" data-bind="Value:fecha" class="form-control" disabled="disabled" placeholder="@DateTime.Now.ToShortDateString()" />
    </div>
</div>

<div class="container">
    <div class="col-lg-6">
        <h6>Responsable:    </h6>
        <input type="text" id="txtnresponsable" data-bind="Value:nresponsable" class="form-control" disabled="disabled" placeholder="Arturo Segundo Henriquez Droguet" />
    </div>
    <div class="col-lg-4">
        <h6>% Reajuste</h6>
        <input type="text" id="txtreajuste" class="form-control" placeholder="Ej: 0.18" />
    </div>
</div>

<div class="container">
    <div class="col-lg-6">
        <h6>Monto Convenio</h6>
        <input type="text" id="txtmonto" class="form-control" data-bind="Value:Monto" />
    </div>
    <div class="col-lg-4">
        <h6>Cuotas</h6>
        <select class="selectpicker show-tick form-control">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
            <option>11</option>
            <option>12</option>
        </select>
    </div>
</div>

<div>
    <h2> </h2>
</div>

<div class="container">
    <div class="col-md-12">
        <table id="tblrecaudacion" class="table table-striped table-bordered dt-responsive nowrap">
            <thead>
                <tr>
                    <th class="text-center">N° Cuota</th>
                    <th class="text-center">Fecha Vencimiento</th>
                    <th class="text-center">Deuda Capital</th>
                    <th class="text-center">Reajuste</th>
                    <th class="text-center">Cuota Mensual</th>
                    <th class="text-center">Reajuste (Monto)</th>
                    <th class="text-center">Amortizacion</th>
                    <th class="text-center">Saldo Capital</th>
                </tr>
            </thead>
            <tr class="text-center">
                <td>1</td>
                <td>29/05/2017</td>
                <td>$629.352</td>
                <td>0.225</td>
                <td>$210.729</td>
                <td>$1.416</td>
                <td>$209.313</td>
                <td>$420.039</td>
            </tr>
            <tr class="text-center">
                <td>2</td>
                <td>28/06/2017</td>
                <td>$420.039</td>
                <td>0.225</td>
                <td>$210.729</td>
                <td>$945</td>
                <td>$209.784</td>
                <td>$210.256</td>
            </tr>
            <tr class="text-center">
                <td>3</td>
                <td>28/07/2017</td>
                <td>$210.256</td>
                <td>0.225</td>
                <td>$210.729</td>
                <td>$473</td>
                <td>$210.256</td>
                <td>$0</td>
            </tr>
        </table>
    </div>
</div>

<div class="container">
    <div class="col-md-6">
        <button class="btn btn-success" id="btnaceptar" data-bind="click:Aceptar">Aceptar</button>
        <button class="btn btn-danger" id="btncancelar" data-bind="click:Cancelar">Cancelar</button>
    </div>
</div>