
@{
    ViewBag.Title = "Boletas Folio";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string fechaInicio = DateTime.Now.ToString("dd/MM/yyyy");
    string fechaFin = DateTime.Now.ToString("dd/MM/yyyy");


}
<input type="hidden" id="hdnUsuario" value="@ViewBag.Usuario" />
<input type="hidden" id="hdnTipoPerfil" value="@ViewBag.TipoPerfil" />

<div class="panel panel-primary">
    <div class="panel-heading" style="font-weight:bold; cursor: pointer" data-toggle="collapse" href="#panelFiltro">
        <table style="width:100%">
            <tr>
                <td>Generar reporte de Boletas Emitidas/Anuladas:</td>
                <td style="text-align: right"><span id="iconoFiltro" class="glyphicon glyphicon-menu-up"></span></td>
            </tr>
        </table>
    </div>
    <div id="panelFiltro" class="panel-collapse collapse in">
        <div class="panel-body">
            <div class="row" style="padding-right: 10px">
                <div class="col-sm-6">
                    <label>Fecha:</label>
                    <div class="input-group col-sm-10">
                        <span class="input-group-addon">desde</span>
                        <input type="text" class="form-control datetime" style="max-width:none" id="txtFechaDesde" placeholder="Fecha inicio búsqueda" value="@fechaInicio" readonly />
                        <button class="input-group-addon" id="btnFechaDesde"><i class="glyphicon glyphicon-calendar"></i></button>
                        <span class="input-group-addon">hasta</span>
                        <input type="text" class="form-control datetime" style="max-width:none" id="txtFechaHasta" placeholder="Fecha término búsqueda" value="@fechaFin" readonly />
                        <button class="input-group-addon" id="btnFechaHasta"><i class="glyphicon glyphicon-calendar"></i></button>
                    </div>
                </div>

            </div>
        </div>
        <div class="panel-footer text-right">
            <button type="button" class="btn btn-primary btn-sm" title="Imprimir Boletas Emitidas" onclick="BoletasEmitidas.ImprimirBoletas('BoletasEmitidas.rpt')"><span class="glyphicon glyphicon-print"></span>&nbsp;Emitidas</button>
            <button type="button" class="btn btn-danger btn-sm" title="Imprimir Boletas Anuladas" onclick="BoletasEmitidas.ImprimirBoletas('BoletasAnuladas.rpt')"><span class="glyphicon glyphicon-print"></span>&nbsp;Anuladas</button>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/HMS/Reportes/BoletasEmitidas.js"></script>


<script>
    $(document).ready(function () {
        $('#panelFiltro').on('hide.bs.collapse', function (e) {
            $("#iconoFiltro").removeClass("glyphicon-menu-up");
            $("#iconoFiltro").addClass("glyphicon-menu-down");
        });
        $('#panelFiltro').on('show.bs.collapse', function (e) {
            $("#iconoFiltro").removeClass("glyphicon-menu-down");
            $("#iconoFiltro").addClass("glyphicon-menu-up");
        });
    });
</script>