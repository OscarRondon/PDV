
@{
    ViewBag.Title = "SubeArchivo";
}

<h2>SubeArchivos</h2>

@using (Html.BeginForm("SubeArchivo", "CargaArchivos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div>
        @Html.TextBox("file", "", new { type = "file" }) <br />

        <input type="submit" value="Upload" />

        @ViewBag.Message

    </div>


}  